@{
    ViewData["Title"] = "DataBase";
}





<h1>@ViewData["Title"]</h1>


<button type="button" class="btn btn-danger">Удалить</button>
<button type="button" class="btn btn-primary">Изменить</button>


<!-- Button ADD trigger modal -->
<button
  type="button"
  class="btn btn-primary"
  data-mdb-toggle="modal"
  data-mdb-target="#addModal"
>
  Add Employee
</button>


<!-- Modal -->
<div
  class="modal fade"
  id="addModal"
  tabindex="-1"
  aria-labelledby="addModal"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add new employee to DataBase</h5>
        <button
          type="button"
          class="btn-close"
          data-mdb-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="input-group">
          <span class="input-group-text">Project name</span>
          <textarea class="form-control" aria-label="Pease name a project"></textarea>
        </div>
        <div class="input-group mb-3">
          <input type="text" class="form-control" placeholder="Username" aria-label="Username" />
          <span class="input-group-text">сабака</span>
          <input type="text" class="form-control" placeholder="mail" aria-label="Server" />
        </div>
        <div class="input-group">
          <span class="input-group-text">Main info</span>
          <textarea class="form-control" aria-label="Write Description"></textarea>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">
          Close
        </button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>



<a class="nav-link text-dark" asp-area="" asp-controller="Project" asp-action="Index">TestProjectIndex</a>